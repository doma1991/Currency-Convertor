@page
@model CurrencyConvertor.Pages.CurrencyConvertorModel
@{
    ViewData["Title"] = "Currency Convertor";
}

    <div class="container-fluid" id="page">
        <div class="row">
            <h1>Currency Convertor</h1>
        </div>
        <div asp-validation-summary="All"></div>

        <form method="post">
            <div class="row center">
                <span>amount</span>
            </div>
            <div class="row">
                <input class="form-control" asp-for="amount" id="amount" type="number" min="0" required />
            </div>
            <div class="row dropdown">
                <select id="Select1" name="Select1" class="btn btn-secondary dropdown-toggle">
                    <option value="EUR" selected>EUR</option>
                    <option value="GBP">GBP</option>
                </select>
            </div>
            <div class="row dropdown">
                <select id="Select2" name="Select2" class="btn btn-secondary dropdown-toggle">
                    <option value="EUR">EUR</option>
                    <option value="GBP" selected>GBP</option>
                </select>
            </div>
            <div class="row">
                <input class="btn btn-secondary" id="ok-button" type="submit" value="OK" />
            </div>
        </form>
        <div class="row">
            <div class="span12 text-center" id="result">@this.Model.money @this.Model.selectionTwo </div>
        </div>
    </div>